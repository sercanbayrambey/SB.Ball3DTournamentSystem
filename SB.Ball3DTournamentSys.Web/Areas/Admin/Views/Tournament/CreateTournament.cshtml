@model CreateTournamentDto
@{
    ViewData["Title"] = "CreateTournament";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="my-4 text-center"><i class="fas fa-plus-square mr-2"></i> Create New Tournament</h2>
<form asp-action="CreateTournament" method="post" class="w-75 mx-auto shadow p-4 my-2">

    <div class="form-group">
        <label asp-for="Name">Tournament Name:</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input type="text" asp-for="Name" class="form-control" value="" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Tournament Description:</label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <textarea asp-for="Description" class="form-control" placeholder="Description goes here..."></textarea>
    </div>

    <div class="form-group">
        <label asp-for="GameType">Tournament Game Type:</label>
        <span asp-validation-for="GameType" class="text-danger"></span>
        <select asp-for="GameType" class="form-control" placeholder="Description...">
            @for (int i = 1; i <= 11; i++)
            {
                <option value="@i">@i vs @i </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="GameType">Score Limit:</label>
        <span asp-validation-for="GameType" class="text-danger"></span>
        <select asp-for="GameType" class="form-control" placeholder="Description...">
            @for (int i = 0; i < 21; i++)
            {
                if (i == 0)
                {
                    <option value="@i">None </option>
                }
                else
                {
                    <option value="@i">@i </option>
                }
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="StadiumId">Tournament Stadium:</label>
        <span asp-validation-for="StadiumId" class="text-danger"></span>
        <select asp-for="StadiumId" class="form-control" asp-items="ViewBag.Stadiums">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="GameServerId">Select Game Server:</label>
        <span asp-validation-for="GameServerId" class="text-danger"></span>
        <select asp-for="GameServerId" class="form-control" asp-items="ViewBag.GameServers">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Tournament Start Date:</label>
        <span asp-validation-for="StartDate" class="text-danger"></span>
        <input asp-for="StartDate" class="form-control" value="" />
    </div>

    <div class="border border-light p-2">
        <div class="form-check">
            <input asp-for="IsOvertimeEnabled" class="form-check-input" value="true" />
            <label class="form-check-label" asp-for="IsOvertimeEnabled">Is Overtime Enabled</label>
            <span asp-validation-for="IsOvertimeEnabled" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-info">Create Tournament</button>
    <a class="btn btn-dark" asp-action="Index" asp-controller="Home">Go back</a>

</form>

