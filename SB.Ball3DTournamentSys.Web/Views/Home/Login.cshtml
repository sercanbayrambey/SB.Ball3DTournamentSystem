@model AppUserLoginDTO
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Login</h1>
<form class="w-75 mx-auto my-2 p-4 shadow" method="post" asp-action="Login">
    <div class="form-group">
        <label asp-for="UserName">Username:</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" value="" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Password:</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control"  />
    </div>

    <div class="form-check">
        <input  asp-for="RememberMe" class="form-check-input"  value="true" checked />
        <label class="form-check-label" asp-for="RememberMe">Remember me?</label>
        <span asp-validation-for="RememberMe" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <p>Dont you have account? <a asp-action="Register" class="btn-link">Register.</a></p>
    <button type="submit" class="btn btn-success">Login</button>


</form>

